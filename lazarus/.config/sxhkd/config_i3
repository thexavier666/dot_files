#------------------------------------------------------------------------------
#----- sxhkd specific
#------------------------------------------------------------------------------

alt + Escape
	pkill -USR1 -x sxhkd

#------------------------------------------------------------------------------
#----- applications
#------------------------------------------------------------------------------

alt + Return
	$TERMINAL

alt + shift + o
	$BROWSER

alt + shift + i
	$BROWSER -new-window web.whatsapp.com

alt + shift + p
	$FILE_MANAGER

alt + shift + y
	yakyak

alt + q
	i3lock-fancy -f Fira-Sans-Regular

#------------------------------------------------------------------------------
#----- control other applications
#------------------------------------------------------------------------------

#---------- bluetooth

super + F9
	$SXHKD_SCRIPT_DIR/rofi/bluetooth_menu

super + F10
	echo 'disconnect' | bluetoothctl

#---------- adjust volume

alt + bracketleft
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%

alt + bracketright
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%

#---------- polybar

alt + comma
	killall polybar

alt + period
	$SXHKD_CONFIG_DIR/polybar/launch.sh

#---------- dunst

F11
	notify-send "DUNST_COMMAND_RESUME"

F12
	notify-send "DUNST_COMMAND_PAUSE"

#--------- rofi menu

alt + d
	rofi -show drun -display-drun "ï†³ " -lines 7 -width 35 -show-icons

alt + s
	$SXHKD_SCRIPT_DIR/rofi/power_menu

#------------------------------------------------------------------------------
#----- wm misc
#------------------------------------------------------------------------------

alt + shift + q
	i3-msg kill

alt + shift + r
	i3-msg restart

alt + c
	i3-msg split h

alt + v
	i3-msg split v

alt + w
	i3-msg layout tabbed

alt + e
	i3-msg layout toggle split

alt + f
	i3-msg fullscreen toggle

alt + shift + space
	i3-msg floating toggle

alt + shift + t
	i3-msg sticky toggle

alt + space
	i3-msg focus mode_toggle

super + c
	i3-msg move position center

#------------------------------------------------------------------------------
#----- wm window change focus
#------------------------------------------------------------------------------

alt + {h,j,k,l}
	i3-msg focus {left,down,up,right}

alt + {Left,Down,Up,Right}
	i3-msg focus {left,down,up,right}

#------------------------------------------------------------------------------
#----- wm change workspace 
#------------------------------------------------------------------------------

alt + {1-9,0}
	i3-msg workspace {1-9,10}

alt + F{1-4}
	i3-msg workspace {5-8}

alt + grave
	i3-msg workspace next_on_output

alt + Tab
	i3-msg workspace back_and_forth

#------------------------------------------------------------------------------
#----- wm window movement
#------------------------------------------------------------------------------

alt + shift + {h,j,k,l}
	i3-msg move {left,down,up,right}

alt + shift + {Left,Down,Up,Right}
	i3-msg move {left,down,up,right}

alt + shift + {1-9,0}
	i3-msg move container to workspace {1-9,10}

alt + shift + F{1-4}
	i3-msg move container to workspace {5-8}

#------------------------------------------------------------------------------
#----- wm window size adjustment
#------------------------------------------------------------------------------

alt + ctrl + {h,Left}
	i3-msg resize shrink width 1 px or 1 ppt

alt + ctrl + {j,Down}
	i3-msg resize grow height 1 px or 1 ppt

alt + ctrl + {k,Up}
	i3-msg resize shrink height 1 px or 1 ppt

alt + ctrl + {l,Right}
	i3-msg resize grow width 1 px or 1 ppt

#------------------------------------------------------------------------------
#----- i3 gap adjustment
#------------------------------------------------------------------------------

super + h
	i3-msg gaps outer current plus 2 

super + j
	i3-msg gaps inner current minus 2

super + k
	i3-msg gaps inner current plus 2

super + l
	i3-msg gaps outer current minus 2

#------------------------------------------------------------------------------
