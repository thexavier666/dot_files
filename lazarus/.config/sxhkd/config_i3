#------------------------------------------------------------------------------
#----- sxhkd specific
#------------------------------------------------------------------------------

alt + Escape
	pkill -USR1 -x sxhkd

#------------------------------------------------------------------------------
#----- applications
#------------------------------------------------------------------------------

alt + Return
	alacritty

alt + shift + o
	firefox

alt + shift + i
	firefox -new-window web.whatsapp.com

alt + shift + p
	nautilus

alt + shift + y
	yakyak

alt + q
	i3lock-fancy -f Fira-Sans-Regular

#------------------------------------------------------------------------------
#----- custom applications
#------------------------------------------------------------------------------

#---------- bluetooth

super + F9
	/home/xavier666/Documents/scripts_dir/rofi/bluetooth_menu

super + F10
	echo 'disconnect' | bluetoothctl

#---------- adjust volume

alt + bracketleft
	pactl -- set-sink-volume @DEFAULT_SINK@ -5%

alt + bracketright
	pactl -- set-sink-volume @DEFAULT_SINK@ +5%

#---------- polybar

alt + comma
	killall polybar

alt + period
	/home/xavier666/.config/polybar/launch.sh

#---------- dunst

F11
	notify-send "DUNST_COMMAND_RESUME"

F12
	notify-send "DUNST_COMMAND_PAUSE"

#--------- rofi scripts

alt + d
	rofi -show drun -display-drun "ï†³ " -lines 7 -width 35 -show-icons

alt + s
	/home/xavier666/Documents/scripts_dir/rofi/power_menu

#------------------------------------------------------------------------------
#----- wm window change focus
#------------------------------------------------------------------------------

alt + {h,j,k,l}
	i3-msg focus {left,down,up,right}

alt + {Left,Down,Up,Right}
	i3-msg focus {left,down,up,right}

#------------------------------------------------------------------------------
#----- wm change workspace 
#------------------------------------------------------------------------------

alt + {1-8}
	i3-msg workspace {1-8}

#------------------------------------------------------------------------------
#----- wm window movement
#------------------------------------------------------------------------------

alt + shift + {h,j,k,l}
	i3-msg move {left,down,up,right}

alt + shift + {Left,Down,Up,Right}
	i3-msg move {left,down,up,right}

alt + shift + {1-8}
	i3-msg move container to workspace {1-8}

#------------------------------------------------------------------------------
#----- wm window size adjustment
#------------------------------------------------------------------------------

alt + ctrl + {h,Left}
	i3-msg resize shrink width 1 px or 1 ppt

alt + ctrl + {j,Down}
	i3-msg resize grow height 1 px or 1 ppt

alt + ctrl + {k,Up}
	i3-msg resize shrink width 1 px or 1 ppt

alt + ctrl + {l,Right}
	i3-msg resize grow height 1 px or 1 ppt

#------------------------------------------------------------------------------
#----- i3 gap adjustment
#------------------------------------------------------------------------------

super + h
	i3-msg gaps inner current plus 2 

super + j
	i3-msg gaps outer current minus 2

super + k
	i3-msg gaps outer current plus 2

super + l
	i3-msg gaps inner current minus 2

#------------------------------------------------------------------------------
